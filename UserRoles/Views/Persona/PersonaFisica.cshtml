@model UserRoles.Models.ViewModels.PersonaViewModel
@using UserRoles.Models.FormsViewModels
@{
    ViewData["Title"] = "Persona Fisica";
}

<div class="persona-fisica">
    <div class="container">
        <h2 class="h2-header inline-header">Persona Fisica</h2>
        <a href="@Url.Action("Create", "Persona")" class="add-user"><i class="fas fa-plus-square fa-2x"></i></a>

        <table id="UserSellers"
               class="table table-striped table-responsive-lg"
               data-toggle="table"
               data-pagination="true"
               data-page-list="[5, 10, 20, 30, 50, 100]"
               data-search="true"
               data-search-align="left">
            <thead>
                <tr>
                    <th data-sortable="true" data-field="Name" class="th-sortable">
                        Name
                    </th>
                    <th data-sortable="true" data-field="Street" class="th-sortable">
                        Address
                    </th>
                    <th data-sortable="true" data-field="Email" class="th-sortable">
                        Email
                    </th>
                    <th>
                        Home Phone
                    </th>
                    <th>
                        Cell Phone
                    </th>
                    <th data-sortable="true" data-field="Typo" class="th-sortable">
                        Typo Cliente
                    </th>
                    <th data-sortable="true" data-field="Status" class="th-sortable">
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PersonaFisica)
                {
                     <tr>
                         <td>
                             @item.FirstName @item.FirstLastName
                         </td>
                         <td>
                             @item.Zip @item.City @item.Street @item.Aparment
                         </td>
                         <td>
                             @item.Email
                         </td>
                         <td>
                             @item.HomePhone
                         </td>
                         <td>
                             @item.CellPhone
                         </td>
                         <td>
                            
                         </td>
                         @if(item.StatusCliente == CustomEnums.TypoStatusClienteEnum.Pending)
                          {
                             <td class="a-yellow-link"><i class="fas fa-circle"></i> Pending</td>
                          }
                         @if(item.StatusCliente == CustomEnums.TypoStatusClienteEnum.Aproved)
                          {
                              <td class="a-blue-link"><i class="far fa-check-circle"></i> Approved</td>
                          }
                         @if(item.StatusCliente == CustomEnums.TypoStatusClienteEnum.Denied)
                          {
                              <td class="a-block-link"><i class="fas fa-times-circle"></i> Denied</td>
                          }
                     </tr>
                }
            </tbody>
        </table>
    </div>
</div>


